@model IEnumerable<TestFile.Models.ImageModel>

@{
    ViewData["Title"] = "Index's";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageName)
            </th>
            <th></th>
            <th>Files</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImageName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>

                <td>
                    <a href="~/Image/@item.ImageName" target="./" class="btn btn-primary">View</a>
                    @*<img src="@("~/Image/" + item.ImageName)" asp-append-version="true" width="150px" height="150px" />*@
                    @*<a class="btn btn-primary" asp-route-ID="@item.ImageName" target="./">View</a>*@
                </td>

        </tr>
}
    </tbody>
</table>
